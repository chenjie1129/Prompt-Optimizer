{
  "manifest_version": 3,
  "name": "PromptOptimization",
  "version": "1.0.0",
  "description": "基于DeepSeek-V3的提示词优化工具",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon32.png"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "options_page": "options.html"  
}